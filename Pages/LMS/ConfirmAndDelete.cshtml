@page
@model LibraryManagementSystem.Pages.LMS.ConfirmAndDeleteModel
@{
}
<h6>Book Details</h6>
<table class="table">
    <thead>
        <tr>
            <th>Book Code</th>
            <th>Book Title</th>
            <th>Book Category</th>
            <th>Book Author</th>
            <th>Book Publication</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.book.book_code</td>
            <td>@Model.book.bookTitle</td>
            <td>@Model.book.category</td>
            <td>@Model.book.author</td>
            <td>@Model.book.publication</td>
        </tr>
    </tbody>
</table>
<h5>Are you sure you have to Delete this @Model.bookCode</h5>
<div>
    <form method="post">
        <button type="submit" class="btn btn-primary">Yes</button>
    </form>
    <a href="/LMS/FetchBook"><button class="btn btn-danger">No</button></a>
</div>